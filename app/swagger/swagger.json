  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "user",
      "description": "Operations about user",
      "externalDocs": {
        "description": "Find out more about our project",
        "url": "http://cmportal.org"
      }
    },
    {
      "name": "auth",
      "description": "Authentication API"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/user": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Creates a new user",
        "description": "Creates a new user with the given data in the request body.",
        "operationId": "createUser",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User object that needs to be created",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Error in the request processing"
          }
        }
      },
      "get": {
        "tags": [
          "user"
        ],
        "summary": "Get user list",
        "description": "Get the user list.",
        "operationId": "listUsers",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
        ],
        "responses": {
          "200": {
            "description": "List of users"
          },
          "400": {
            "description": "Error in the request processing"
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    },
    "/auth": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Generates the authentication code",
        "description": "Performs user authentication using the JWT method.\n This token has to be sent in the header 'x-access-token' in all protected API requests.",
        "operationId": "authenticate",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User information for authentication.",
            "required": true,
            "schema": {
              "type": "object",
              "required":[
                "email", "password"
              ],
              "properties":{
                "email": {
                  "type": "string"
                },
                "password":{
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Error in the request processing"
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "api_key": {
      "type": "apiKey",
      "name": "x-access-token",
      "in": "header"
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "required":[
        "name", "email", "password"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "xml": {
        "name": "User"
      }
    }
  },
